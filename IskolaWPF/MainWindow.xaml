<Window x:Class="IskolaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="591" Width="954">
    <Grid Margin="0,0,10,-111">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="datagrid" AutoGenerateColumns="False" Margin="10,10,10,227" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kézdési Év" Binding="{Binding kezdEv}"/>
                <DataGridTextColumn Header="Osztály" Binding="{Binding osztaly}"/>
                <DataGridTextColumn Header="Név" Binding="{Binding nev}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="torles" Content="Törlés" HorizontalAlignment="Left" Margin="69,482,0,0" VerticalAlignment="Top" Height="36" Width="144" Grid.Column="1" Click="torles_Click"/>
        <Button x:Name="mentes" Content="Állomány mentése" HorizontalAlignment="Left" Margin="300,480,0,0" VerticalAlignment="Top" Height="38" Width="143" Grid.Column="1" Click="mentes_Click"/>
    </Grid>
</Window>
